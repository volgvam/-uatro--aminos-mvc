            @Html.DisplayFor(modelItem => item.Date.Year)
        </td>
        <td class="many"> 
            @Html.DisplayFor(modelItem => item.Amount)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.PeopleCount)
           

