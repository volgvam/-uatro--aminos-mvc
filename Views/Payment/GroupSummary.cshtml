@model IEnumerable<CuatroCaminosMvcApplication.Models.PayGroup>

@{
    ViewBag.Title = "Общие суммы по группам";
}

<h2>Общие суммы по группам</h2>

<p>
    @Html.ActionLink("Вернуться в оплату", "Index", "Payment") |

