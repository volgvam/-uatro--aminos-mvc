@model CuatroCaminosMvcApplication.Models.СписокНаМероприятие



<script src="@Url.Content("~/Scripts/jquery.validate.min.js")" type="text/javascript"></script>
<script src="@Url.Content("~/Scripts/jquery.validate.unobtrusive.min.js")" type="text/javascript"></script>

<script src="@Url.Content("~/Scripts/jquery.unobtrusive-ajax.js")" type="text/javascript"></script>


@{
    int МероприятеID = (int) ViewBag.ActivityId;
}


            <div id="target">

                        @Html.Action("ListActivityDetails")

             </div>

<br /><br />

@if (!@ViewBag.CloseActivity)
{ 

using (Ajax.BeginForm(
                 "CreateActivityDetails",
                 new AjaxOptions
                 {
                     HttpMethod = "post",
                     UpdateTargetId = "target"
                 }))
{
    @Html.ValidationSummary(true)
    <fieldset>
        <legend>форма добавления данных в мероприятие</legend>


<div class="birthday">



        <div class="editor-field">
            @Html.EditorFor(model => model.Avto)
            @Html.LabelFor(model => model.Avto)

            @Html.ValidationMessageFor(model => model.Avto)
        </div>

        <div class="editor-field">
            @Html.EditorFor(model => model.Ok)
            @Html.LabelFor(model => model.Ok)

            @Html.ValidationMessageFor(model => model.Ok)
        </div>


</div>


        <div class="editor-label">
            @Html.LabelFor(model => model.PeopleId)
        </div>

        <div class="editor-field">
            @Html.EditorFor(model => model.PeopleId)
            @Html.ValidationMessageFor(model => model.PeopleId)
        </div>

        @Html.Hidden("МероприятеID", МероприятеID)

        <div class="editor-label">
            @Html.LabelFor(model => model.Pay)
        </div>
        <div class="editor-field">
            @Html.EditorFor(model => model.Pay)
            @Html.ValidationMessageFor(model => model.Pay)
        </div>

        <div class="editor-label">
            @Html.LabelFor(model => model.Description)
        </div>
        <div class="editor-field">
            @Html.EditorFor(model => model.Description)
            @Html.ValidationMessageFor(model => model.Description)
        </div>


        <p>
            <input type="submit" value="Записать" />
        </p>


    </fieldset>
}

}else
{
    <h5>Мероприятие закрыто для редактирования</h5>
}

