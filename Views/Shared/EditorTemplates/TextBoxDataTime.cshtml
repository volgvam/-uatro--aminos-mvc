

@{
    string dt = (ViewBag.Дата != null ? ViewBag.Дата.ToString("d") : "");
}

 <script src="@Url.Content("~/Scripts/jquery.ui.datepicker-ru.js")" type="text/javascript"></script>

    <script src="@Url.Content("~/Scripts/jquery.validate.min.js")" type="text/javascript"></script>
    <script src="@Url.Content("~/Scripts/jquery.validate.unobtrusive.min.js")" type="text/javascript"></script>



   
    @Html.TextBox("", dt, new { @class = "datePicker" })
    @Html.ValidationMessageFor(model => model)


    
<script type="text/javascript">
    $(document).ready(function () {
        $('.datePicker').datepicker({showButtonPanel:true, changeMonth:true, changeYear:true, firstDay: 1, dateFormat: 'dd.mm.yy' });

    });
</script>
